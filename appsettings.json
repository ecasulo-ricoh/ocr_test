  "Tesseract": {
    "DataPath": "./tessdata",
    "Language": "eng+spa"
  },
  "BulkUpdate": {
    "MaxDocumentLimit": 5000,
    "EmptyFieldValues": ["--", "", "N/A", "NULL", "null", "undefined", " ", "  ", "   ", "0", "000", "---", "n/a", "N.A.", "N.A", "n.a.", "n.a", "no data", "NO DATA", "Sin datos", "SIN DATOS"],
    "TreatEmptyValuesAsPlaceholders": true,
    "LogPlaceholderReplacements": true
  },
  "ImagePreprocessing": {
    "EnablePreprocessing": false,
    "Steps": {
      "ConvertToGrayscale": true,
      "IncreaseContrast": true,
      "ContrastAlpha": 1.5,
      "RemoveNoise": true,
      "NoiseReductionKernel": 3,
      "ApplyBinarization": true,
      "BinarizationBlockSize": 31,
      "BinarizationConstant": 2,
      "CorrectSkew": true,
      "ResizeImage": true,
      "ResizeScale": 2.0
    },
    "SaveDebugImages": false,
    "DebugImagePath": "./debug_images"
  },
  "CsvLogging": {
    "EnableCsvLogging": true,
    "LogsDirectory": "./logs/csv_reports",
    "MaxFileSizeMB": 25,
    "RetentionDays": 90,
    "AutoCleanup": true
  }
}
